@model IEnumerable<Domain.Equipe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                <div> Serach by name : @Html.TextBox("SearchString")    </div>
            </td>

            <td>
                <input type="submit" value="Search" id="submit" />
            </td>
        </tr>
    </table>
}
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdresseLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomEquipe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AdresseLocal)
                </td>
                <td>
                    <img src="~/uploads/@item.Logo" width="40" height="40" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomEquipe)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EquipeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EquipeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EquipeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
